::sysinit:/etc/03_boot.sh
::restart:/sbin/init
::shutdown:echo -e "\nSyncing OverlayFS..."
::shutdown:sync
::shutdown:echo -e "\nUnmounting All Filesystems..."
::shutdown:umount -a -r
::shutdown:echo -e "\nShutting Down AwlsomeLinux... \n"
::shutdown:sleep 1
::ctrlaltdel:/sbin/reboot
::once:cat /etc/welcome.txt
::respawn:/bin/cttyhack /bin/sh
tty2::once:cat /etc/welcome.txt
tty2::respawn:/bin/sh
tty3::once:cat /etc/welcome.txt
tty3::respawn:/bin/sh
tty4::once:cat /etc/welcome.txt
tty4::respawn:/bin/sh

